{
  "compilerOptions": {
    "target": "es2015",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "src",
    "checkJs": false,
    "paths": {
      "@assets/*": ["assets/*"],
      "@components/*": ["component/*"],
      "@pages/*": ["pages/*"],
      "@redux/*": ["redux/*"],
      "@route/*": ["route/*"],
      "@styles/*": ["styles/*"],
      "@utils/*": ["utils/*"]
    },
    "typeRoots": [
        "./node_modules/@types",
        "./@types"
    ]
  },
  
  "include": ["src"]
}